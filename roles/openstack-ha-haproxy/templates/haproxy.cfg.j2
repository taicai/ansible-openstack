global
  chroot  /var/lib/haproxy
  daemon
  group  haproxy
  pidfile  /run/haproxy.pid
  user  haproxy

defaults
  log  global
  maxconn  8000
  option  redispatch
  retries  3
  timeout  http-request 10s
  timeout  queue 1m
  timeout  connect 10s
  timeout  client 1m
  timeout  server 1m
  timeout  check 10s

listen monitor
  bind {{ openstack_ha_vip }}:9300
  mode http
  monitor-uri /status
  stats enable
  stats uri /admin
  stats realm Haproxy\ Statistics
  stats auth {{ haproxy_status_username }}:{{ haproxy_status_password }}
  stats refresh 5s

listen dashboard_cluster
  bind {{ openstack_ha_vip }}:80
  balance  source
  capture  cookie vgnvisitor= len 32
  cookie  SERVERID insert indirect nocache
  mode  http
  rspidel  ^Set-cookie:\ IP=
  option  forwardfor
  option  tcpka
  option  httpchk
  option  tcplog
  {% for nova_controller in groups['openstack-ha-haproxy'] %}
server {{ hostvars[nova_controller].hostname }} {{ nova_controller }}:80 check inter 2000 rise 2 fall 5
  {% endfor %}

listen galera_cluster
  bind {{ openstack_ha_vip }}:3306
  balance  source
  mode  tcp
  option  mysql-check
  {% for nova_controller in groups['openstack-ha-haproxy'] %}
{% if loop.last %}server {{ hostvars[nova_controller].hostname }} {{ nova_controller }}:3306 check inter 2000 rise 2 fall 5
{% else %}server {{ hostvars[nova_controller].hostname }} {{ nova_controller }}:3306 backup check inter 2000 rise 2 fall 5
{% endif %}
  {% endfor %}

listen rabbitmq_cluster
